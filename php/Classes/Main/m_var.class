<?php
/*
	DealMe static class for holding variables
*/

class m_var{
	/*
		Properties
		DealMe Mongo Database Collection Names
	*/
	private static $database = "dealsUsers";
	private static $businessAccount = "Business_Profile";
	private static $businessAds = "Deals";
	private static $userAccount = "UserAccount";
	private static $locations = "locations";
	private static $category = "categories";

	/*
		protect this static class from instantiation
	*/
	private function __clone(){}
	private function __wakeup(){}
	protected function __construct(){}
	
	/*
		Methods
		Returns the methods name linked property
	*/
	public static function get_database(){
		return self::$database;
	}
	
	public static function get_userAccount(){
		return self::$userAccount;
	}
	
	public static function get_businessAccount(){
		return self::$businessAccount;
	}
	
	public static function get_businessAds(){
		return self::$businessAds;
	}
	
	public static function get_locations(){
		return self::$locations;
	}
	
	public static function get_categories(){
		return self::$category;
	}
}
?>