<?php
/*
	DealMe FindOne class for Mongo FindOne Method
*/

class m_FindOne extends m_Connection{

	/*
		protect this static class from instantiation
	*/
	private function __clone(){}
	private function __wakeup(){}
	protected function __construct(){}
	
	/*
		Methods
	*/
	public static function result($database,$collection,$query){
		return parent::connection()->$database->$collection->findone($query);
	}
}
?>